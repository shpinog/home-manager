##gtk theme
exec_always {
    gsettings set $gnome-schema gtk-theme 'yaru'
    gsettings set $gnome-schema icon-theme 'yaru'
    gsettings set $gnome-schema cursor-theme 'yaru'
    gsettings set $gnome-schema font-name 'Noto'
}

